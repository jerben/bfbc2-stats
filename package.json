        "babel": "^6.5.2",
        "babel-core": "^6.18.2",
        "babel-loader": "^6.2.7",
        "babel-preset-es2015": "^6.18.0",
        "bootstrap-loader": "^2.0.0-beta.12",
        "bootstrap-sass": "^3.3.7",
        "css-loader": "^0.25.0",
        "expect.js": "^0.3.1",
        "expose-loader": "^0.7.1",
        "file-loader": "^0.9.0",
        "imports-loader": "^0.6.5",
        "json-loader": "^0.5.4",
        "mocha": "^3.2.0",
